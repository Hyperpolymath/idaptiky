{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,                  // Don't output filesâ€”just typecheck
    "moduleResolution": "node",
    "allowJs": true,                 // Let you mix JS and TS if needed
    "checkJs": false,                // Skip typechecking JS files
    "incremental": true,             // Faster rebuilds for dev sessions
    "sourceMap": true                // Enable for better stack traces
  },
  "include": [
    "src/**/*",
    "scripts/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "data/puzzles/compiled"
  ]
}
