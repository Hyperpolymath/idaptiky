{
  "compilerOptions": {
    "target": "ES2022",                      // Modern JS target
    "module": "CommonJS",                    // Compatible with Node.js
    "outDir": "./dist",                      // Output location for compiled .js files
    "rootDir": "./src",                      // Your source files live here
    "esModuleInterop": true,                 // Allow default import compatibility
    "resolveJsonModule": true,               // Enables importing .json files
    "strict": true,                          // Type safety FTW
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "src/scripts/**/*"
, "cli.ts"  ],
  "exclude": [
    "node_modules",
    "tests",
    "data"
  ]
}
